<p style="color: green"><%= notice %></p>

<div class="p-5">
  <%= render partial: "shared/org_nav" %>

  <h3 class="text-center mt-4">Tasks</h3>

  <%= link_to "New task", new_organization_task_path(@organization), class: "btn btn-primary mb-3" %>

  <div id="tasks">
    <h3>Not Started</h3>
    <% @tasks.each do |task| %>
      <% if task.status == "not_started" %>
        <%= render task %>
        <%= button_to "Start", start_organization_task_path(@organization, task), method: :put, class: "btn btn-success" %>


      <% end %>
    <% end %>

    <h3>In Progress</h3>
    <% @tasks.each do |task| %>
      <% if task.status == "in_progress" %>
        <%= render task %>
        <%= button_to "Complete", complete_organization_task_path(@organization, task), method: :put, class: "btn btn-success" %>
      <% end %>
    <% end %>

    <h3>Completed</h3>
    <% @tasks.each do |task| %>
      <% if task.status == "completed" %>
        <%= render task %>
      <% end %>
    <% end %>
  </div>
  <!-- end of tasks div-->
</div>
