<p style="color: green"><%= notice %></p>
<div class="p-5">
  <%= render partial: "shared/org_nav" %>

  <div class="container">
    <div class="row justify-content-center mt-2">
      <div class="col text-center">
        <h3 class="mb-0">Meeting Minutes</h3>
      </div>
      <div class="col-auto">
        <%= link_to new_organization_meeting_minute_path(@organization), class: "btn btn-primary pb-2 mb-0", style: "background-color: #63E6BE; border-color: #63E6BE;" do %>
          <i class="fa-solid fa-square-plus fa-lg" style="color: #fff;"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div id="meeting_minutes" class="row justify-content-center">
    <% if @meeting_minutes.present? %>
      <% @meeting_minutes.sort_by { |meeting_minute| meeting_minute.meeting_date }.reverse_each.with_index do |meeting_minute, index| %>
        <div class="col-md-4 mb-3 d-flex justify-content-center"> <!-- Add justify-content-center class to center the cards -->
          <div class="card" style="width: 18rem;"> <!-- Specify a fixed width for the cards -->
            <div class="card-header text-center">
              <%= link_to meeting_minute.meeting_date.try(:strftime, '%Y %B %d'), organization_meeting_minute_path(@organization, meeting_minute) %>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><%= meeting_minute.content.to_plain_text.truncate(50) %></li>
            </ul>
            <div class="card-footer">
              Card footer
            </div>
          </div>
        </div>

        <% if (index + 1) % 3 == 0 %>
          <div class="w-100"></div> <!-- Break the row after every third card -->
        <% end %>
      <% end %>
    <% else %>
      <p>No meeting minutes available.</p>
    <% end %>
  </div>
</div>
