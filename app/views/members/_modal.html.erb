<% modal_id = "memberModal#{member.id}" %>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#<%= modal_id %>">
  <i class="fa-solid fa-chevron-right"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="<%= modal_id %>" tabindex="-1" role="dialog" aria-labelledby="<%= modal_id %>" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="memberModalTitle"> <%= member.organization.name %> </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render partial: member %>
      </div>
      <div class="modal-footer">
        <%= link_to "Edit this member", edit_organization_member_path(@organization, member) %> |

        <a href="/organizations/<%= member.organization_id %>/members">Back to organization's members</a>

        <%= button_to "Destroy this member", organization_member_path(@organization, member), method: :delete %>
      </div>
    </div>
  </div>
</div>
</div>
