<div class="container p-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mt-5 mb-4">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mb-4" }) do |f| %>
        <div class="form-group mb-3">
          <%= f.input :email, label: false,
                      placeholder: "Email",
                      required: false,
                      autofocus: true,
                      input_html: { class: "form-control", autocomplete: "email" } %>
        </div>
        <div class="form-group mb-3">
          <%= f.input :password, label: false,
                      placeholder: "Password",
                      required: false,
                      input_html: { class: "form-control", autocomplete: "current-password" } %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-group form-check mb-3">
            <%= f.input :remember_me, as: :boolean, label: "Remember me", input_html: { class: "form-check-input" } %>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
